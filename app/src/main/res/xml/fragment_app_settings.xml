<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/default_theme_value"
        android:dialogIcon="@drawable/ic_format_paint_black_24dp"
        android:dialogTitle="@string/title_theme"
        android:entries="@array/themes_list"
        android:entryValues="@array/themes_values"
        android:icon="@drawable/ic_format_paint_black_24dp"
        android:key="@string/key_theme"
        android:summary="@string/theme_sum"
        android:title="@string/title_theme" />

    <EditTextPreference
        android:defaultValue="12345"
        android:dialogIcon="@drawable/ic_key"
        android:dialogTitle="@string/title_password"
        android:icon="@drawable/ic_key"
        android:inputType="numberPassword"
        android:key="@string/key_password"
        android:summary="@string/password_sum"
        android:title="@string/title_password" />

</PreferenceScreen>